{
  "name": "viddown-server",
  "version": "1.0.0",
  "description": "Video download server",
  "main": "server.js",
  "scripts": {
    "start": "npm install && node server.js",
    "dev": "node server.js",
    "install-deps": "npm install"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "fluent-ffmpeg": "^2.1.2",
    "multer": "^1.4.5-lts.1"
  },
  "optionalDependencies": {
    "yt-dlp": "^3.0.0"
  }
  {
  "scripts": {
    "start": "npm install && pip install yt-dlp && node server.js",
    "prestart": "pip install yt-dlp || echo 'yt-dlp installation failed, continuing...'"
  }
}
}